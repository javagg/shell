<div>
  <% form_for @user, :url => account_path do |f| %>
    <%= f.error_messages %>
    <div id="register_panel">

      <table>
        <tbody>
          <tr>
            <td style="text-align:right;width:100px"><%= f.label :username %></td>
            <td style="text-align:left"><%= f.text_field :username, :class => 'txt_field' %></td>
          </tr>
          <tr>
            <td style="text-align:right;width:100px"><%= f.label :password %></td>
            <td style="text-align:left"><%= f.password_field :password, :class => 'txt_field' %></td>
          </tr>
          <tr>
            <td style="text-align:right;width:100px"><%= f.label :password_confirmation %></td>
            <td style="text-align:left"><%= f.password_field :password_confirmation, :class => 'txt_field' %></td>
          </tr>
          <tr>
            <td style="text-align:right;width:100px"><%= f.label :email %></td>
            <td style="text-align:left"><%= f.text_field :email, :class => 'txt_field' %></td>
          </tr>
          <tr><td>&nbsp;</td><td style="text-align:left"><%= f.submit I18n.t('general.submit') %></td></tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>


